<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1f5fe"
    android:orientation="vertical"
    tools:context="com.sujanth.singlescreenapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Moor's Head"
        style="@style/MainHeaderStyle"
         />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:scaleType="centerCrop"
        android:src="@drawable/themoorhead" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/MenuButton"
            android:text="Call" />

        <Button
            style="@style/MenuButton"
            android:text="Direction" />

        <Button
            style="@style/MenuButton"
            android:text="Share" />

        <Button
            style="@style/MenuButton"
            android:text="Website" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/description_text_view"
            android:text="Description: "
            style="@style/SectionHeader" />

        <TextView
            android:layout_below="@+id/description_text_view"
            android:text="Pop in and see what happens when two Arabs who love pizza and Middle Eastern flavours decide to combine the two to create a new spin on one of Melbourneâ€™s favourite foods. You might also get to love arak as much as we do."
            style="@style/TextStyle"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/location_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/location_image_view"
            android:text="774 High Street, Thornbury, Victoria"
            android:textSize="20sp" />

    </RelativeLayout>


</LinearLayout>
